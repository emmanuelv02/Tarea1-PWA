<form method="post" enctype="multipart/form-data" action="#">
    <div class="form-group {{# if invalidName}}has-error{{/if}}">
        <label for="name">Name</label>
        <input type="text" name="name" id="name" class="form-control" value="{{nameValue}}">
    </div>
    <div class="form-group {{# if invalidDescription}}has-error{{/if}}">
        <label for="description">Description</label>
        <textarea class="form-control" id="description" name="description" rows="3">{{descriptionValue}}</textarea>
    </div>
    <div class="form-group {{# if invalidKeywords}}has-error{{/if}}">
        <label for="keywords">Keywords</label>
        <input type="text" name="keywords" id="keywords" value="{{keywordsValue}}" class="form-control">
    </div>
    <div class="form-group {{# if invalidPoster}}has-error{{/if}}">
        <label for="poster">Poster</label>
        <input type="file" name="poster" id="poster" class="form-control-file form-control">
    </div>
    <button class="btn btn-primary" type="submit">Submit</button>
</form>